
@model List<EncantoLib.Entities.Venda>
@{
    ViewData["Title"] = "Vendas";
}

<div>
    <h3 class="display-4">Vendas</h3>
    <p>
        <a asp-action="ListaClientes">Vender</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Cliente
                </th>
                <th>
                    Valor
                </th>
                <th>
                    Status da Venda
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
